@model LibraryManagementSystem.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center">
    <div class="border border-primary" style="margin-right:20px;padding:30px;">
        <img src="~/images/@Model.BookImage" width="400" height="400"/>
    </div>
    
    <div class="border border-primary text-center" style="width:400px;padding:35px;">
        <h2>@Model.Title</h2>
        <hr />
        <p>
            @Model.Description
        </p>
        <p>
            By: 
            @Model.Author
        </p>
        <p>
            Published in:
            @Model.publishedDate
        </p>
        <div class="d-flex justify-content-center">
            <label>Quantity : </label>
            <p> @Model.Quantity</p>
        </div>

        <div class="d-flex justify-content-center">
            <label>Price : </label>
            <p> @Model.Price $</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit | </a> 
        <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a> 
        }
        <a asp-action="Index">Back to List</a>
     </div>
  


</div>


  

